.libraryWrap {
   padding-top:110rpx; 
  background: #f3f4f6;
  padding-bottom:100rpx;
}

/* tab样式覆盖 */

.library{
  position: fixed;
  top:110rpx;
  left:0;
  z-index: 4;
}
.library .zan-tab__bd {
  border-bottom: none;
  background: #de4138;
  color: #fff;
}

/* tab没有被选中的样式 */

.library .zan-tab__title {
  color: #fff;
  font-weight: lighter;
  height: 70rpx;
  line-height: 70rpx;
}

/* tab项在选中时的样式 */

.library .zan-tab__item--selected .zan-tab__title {
  color: #fff;
  border-bottom: 2px solid #fff;
  font-weight: bold;
}

/* 音乐库内容 */

.libraryContent {
  position: relative;
  padding-top: 93rpx;
}

.content-bgd {
  position: absolute;
  top: 0;
  left: 0;
  /* z-index: -1; */
  width: 100%;
  height: 236rpx;
  background: #de4138;
}

/* banner轮播图 */

.tj-banner {
  width: 100%;
  height: 270rpx;
  margin: 0 auto;
  overflow: hidden;
}

.banner-wrap {
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.banner-wrap image {
  display: block;
  width: 725rpx;
  height: 100%;
  margin: 0 auto;
  border-radius: 10rpx;
}

/* 中间的四个按钮 */

.tj-middle {
  display: flex;
  justify-content: space-around;
  margin: 0 auto;
  width: 100%;
  padding: 42rpx 12rpx 27rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e6e8;
  background: #f3f4f6;
}

.tj-middle-content {
  width: 25%;
}

.tj-middle-content-img {
  display: block;
  width: 110rpx;
  height: 110rpx;
  margin: 0 auto;
}

.tj-middle-content-text {
  display: block;
  width: 100%;
  text-align: center;
  line-height: 70rpx;
  height: 50rpx;
  font-size: 25rpx;
}

.recommend-text{
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
